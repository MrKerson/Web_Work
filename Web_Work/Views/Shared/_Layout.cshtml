    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="nav-item active">
                <li class="form-control mr-sm-0">@Html.ActionLink("Начальная страница", "Index", "Home", new { area = "" }, new { @class = "nav-item" })</li>
            </ul>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

                @if (User.Identity.IsAuthenticated == true)
                {
                    <form class="form-inline my-2 my-lg-0">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link  dropdown-toggle form-control mr-sm-0" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                   @User.Identity.Name
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Выход", "Logoff", "Account", new { area = "" }, new { @class = "dropdown-item nav-item form-control mr-sm-0" })
                                </div>
                            </li>
                        </ul>
                    </form>
                }
                else
                {
                    <form class="form-inline my-2 my-lg-0">
                        <ul>
                            <li class="nav-item form-control mr-sm-0">@Html.ActionLink("Вход", "Login", "Account", new { area = "" }, new { @class = "nav-item" })</li>
                            <li class="nav-item form-control mr-sm-0">@Html.ActionLink("Регистрация", "Register", "Account", new { area = "" }, new { @class = "nav-item" })</li>
                        </ul>
                    </form>
                }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr/>
    </div>

